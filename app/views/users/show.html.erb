<!--  app/views/users/show.html.erb -->
<h2>Your Profile </h2>

<ul id="details">
<li>
    Name:
    <%= @user.name %>
  </li>
  <li>
    Email:
    <%= @user.email %>
  </li>
  <li>
    Currency:
    <%= @user.default_currency %>
  </li>
</ul>

<div class="row">
  <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-danger col-2' %>
  <%= link_to 'Back to transaction list', transactions_path, :class => 'btn btn-info col-2' %>
</div>