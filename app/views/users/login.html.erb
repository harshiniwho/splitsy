<h1> Sign In</h1>
<%= form_tag :class => 'form' do %>
    <%= label :user, :email, 'Email', :class => 'col-form-label' %>
    <%= text_field :user, :email, :class => 'form-control' %>
  <%= label :user, :password, 'Password', :class => 'col-form-label' %>
  <%= password_field :user, :password, :class => 'form-control' %>
  <br>
    <%= submit_tag 'Login', :class => 'btn btn-info' %>
    <%= link_to 'Cancel', welcome_path, :class => 'btn btn-secondary' %> <br>
<%end%>